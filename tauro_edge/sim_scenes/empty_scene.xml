<mujoco model="empty_scene">
  <compiler angle="radian" meshdir="../../tauro_common/models/so_arm100/assets/"/>

  <option cone="elliptic" impratio="10" integrator="implicitfast"/>

  <asset>
    <!-- Ground material -->
    <material name="ground_mat" rgba="0.6 0.6 0.6 1"/>
  </asset>

  <worldbody>
    <!-- Just ground plane and lighting -->
    <geom name="ground" type="plane" size="5 5 0.1" material="ground_mat"/>
    
    <!-- Lighting -->
    <light name="main_light" pos="0 0 3" dir="0 0 -1" diffuse="1.0 1.0 1.0" specular="0.3 0.3 0.3"/>
  </worldbody>
</mujoco>